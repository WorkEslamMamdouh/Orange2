@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Men_GenDefVendorCat;
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row gy-3" id="div_ContentData">
    <!-- Filter Container -->
    <div class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="form-group row">
                            <label class="col-4 align-self-center p-md-0">@SystemResource.APP_Category</label>
                            <div class="col-8 ">
                                <select id="drpPaymentType" class="form-control">
                                    <option value="Null">@SystemResource.APP_Category</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Table  -->
    <div class="col-12 display_none" id="divShow">
        <div class="inside-table my-4">
            <div class="table-responsive">
                <table class="table table-borderless ">
                    <thead>
                        <tr>
                            <th style="width: 5%"></th>
                            <th style="width: 5%"> @SystemResource.App_Code </th>
                            <th style="width: 5%">@SystemResource.App_DescA</th>
                            <th style="width: 20%">@SystemResource.App_DescE </th>
                            <th style="width: 20%"> @SystemResource.APP_Category</th>
                            <th style="width: 10%">@SystemResource.App_ReferenceNumber</th>
                            <th style="width: 10%" class="text-wrap">@SystemResource.App_BarCode</th>
                            <th style="width: 10%" class="text-wrap">@SystemResource.App_SerialNumber</th>
                        </tr>
                    </thead>
                    <tbody id="div_Data"></tbody>

                </table>
                <div class="d-flex justify-content-start mr-1">
                    <span id="btnAddDetails" class="mb-3 display_none"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                </div>
            </div>
        </div>
    </div>

   
</div>
@section Script{
    <script src="~/ClientApp/StkDefinition/StkDefItemType.js"></script>
}
