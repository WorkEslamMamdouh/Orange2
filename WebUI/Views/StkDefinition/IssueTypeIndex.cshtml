@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Men_AccDefBox;
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="row gy-3" id="div_ContentData">
    <div class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <!-- Table  -->
                <div class="custom-table my-4">
                    <div class="table-responsive">
                        <table class="table table-borderless ">
                            <thead>
                                <tr>
                                    <th style="width: 1%"></th>
                                    <th style="width: 5%"> @SystemResource.Name_Arabic </th>
                                    <th style="width: 20%">@SystemResource.Name_English</th>
                                    <th style="width: 20%">@SystemResource.p_account_number </th>
                                    <th style="width: 20%"> @SystemResource.App_Notes</th>
                                </tr>
                            </thead>
                            <tbody id="div_Data"></tbody>

                        </table>
                        <div class="d-flex justify-content-start mr-1">
                            <span id="btnAddDetails" class="mb-3 display_none"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Script{
    <script src="~/ClientApp/StkDefinition/IssueType.js"></script>
    }
