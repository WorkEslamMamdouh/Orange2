
@using Inv.WebUI.Resources
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<label for="rpTitle" style="display:none" id="rpTitle">@*@SystemResource.Rep_PayRecieptList*@</label>
<div class="row gy-3" id="content_report">
    <!-- Filter Container -->
    <div id="div_dis" class="col-12">
        <div class="card bg-light-blue" id="informtionReserved">
            <div class="card-body" id="id_div_Add">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <div class="col-12 col-md-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.App_FromPeriod</label>
                                    <div class="col-8 ">
                                        <select id="ddl_FromPer" name="" class="form-control"></select>

                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.App_ToPeriod</label>
                                    <div class="col-8 ">
                                        <select id="ddl_ToPer" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.App_Branch</label>
                                    <div class="col-10 ">
                                        <select class="form-control" name="Branch" id="ddl_Branch" ></select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.App_Store</label>
                                    <div class="col-10 ">
                                        <select class="form-control" id="ddl_Store"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.choose_Cat</label>
                                    <div class="col-10 ">
                                        <select id="ddl_Cat" name="" class="form-control">
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.Item_Type</label>
                                    <div class="col-10 ">
                                        <select id="ddl_Item_Type" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.App_Type</label>
                                    <div class="col-10 ">
                                        <select id="drpitem_family" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div> 
                    <div class="col-12 col-md-6">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group row ">
                                <label for="txtToDate" class="col-2 align-self-center p-md-0">@SystemResource.App_BalanceType</label>
                                <div class="col-10 special-group pt-0">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="form-check d-inline-flex">
                                                <input class="form-check-input form-radio special-radio" type="radio" id="BalTp0" name="BalTp" value="0">
                                                <label class="form-check-label special-label" for="BalTp0"> @SystemResource.App_All </label>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-check d-inline-flex">
                                                <input class="form-check-input form-radio special-radio" type="radio" id="BalTp1" name="BalTp" value="1">
                                                <label class="form-check-label special-label" for="BalTp1"> @SystemResource.App_Balanc</label>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-check d-inline-flex">
                                                <input class="form-check-input form-radio special-radio " type="radio" id="BalTp2" name="BalTp" value="2">
                                                <label class="form-check-label special-label" for="BalTp2"> @SystemResource.App_Zero</label>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-check d-inline-flex">
                                                <input class="form-check-input form-radio special-radio" type="radio" id="BalTp3" name="BalTp" value="3">
                                                <label class="form-check-label special-label" for="BalTp3"> @SystemResource.App_negative</label>
                                            </div>
                                        </div>
                                    </div>


                                 </div>
                            </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row ">
                                    <label for="txtToDate" class="col-2 align-self-center p-md-0">@SystemResource.CollectedBy</label>
                                    <div class="col-10 special-group pt-0 ">
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-check d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptp1" name="reptp" value="3">
                                                    <label class="form-check-label special-label" for="reptp1"> @SystemResource.by_cat </label>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-check d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptp2" name="reptp" value="2">
                                                    <label class="form-check-label special-label" for="reptp2"> @SystemResource.by_type</label>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-check d-inline-flex">
                                                    <input class="form-check-input form-radio special-radio" type="radio" id="reptp3" name="reptp" value="1">
                                                    <label class="form-check-label special-label" for="reptp3"> @SystemResource.by_item</label>
                                                </div>
                                            </div>
                                           
                                            
                                        </div>
                                       

                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <label class="col-2 align-self-center p-md-0">@SystemResource.App_Item</label>
                                    <div class="col-10 ">
                                        <select id="txt_ID_APP_Type" name="" class="form-control" disabled></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Script{
<script>
    $(document).ready(function () {
        // Initialize select2
        $("#drpitem_family").select2();
        $("#txt_ID_APP_Type").select2();

        // Read selected option
        $('#but_read').click(function () {
            var username = $('#drpitem_family option:selected').text();
            var userid = $('#drpitem_family').val();

            var username = $('#txt_ID_APP_Type option:selected').text();
            var userid = $('#txt_ID_APP_Type').val();


            $('#result').html("id : " + userid + ", name : " + username);
        });
    });
</script>

<script src="~/ClientApp/StkDefinition/ItemPeriodSummary.js"></script>
}


