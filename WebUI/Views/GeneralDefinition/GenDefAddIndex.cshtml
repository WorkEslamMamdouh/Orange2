@using Inv.WebUI.Resources
@{
    ViewBag.Title = @SystemResource.Men_GenDefVendorCat;
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="row gy-3" id="div_ContentData">
    <div class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <!-- Table  -->
                <div class="custom-table my-4">
                    <div class="table-responsive">
                        <table class="table table-borderless ">
                            <thead>
                                <tr>
                                    <th style="width: 1%"></th>
                                    <th style="width: 5%"> @SystemResource.App_Code </th>
                                    <th style="width: 20%">@SystemResource.App_DescA</th>
                                    <th style="width: 20%">@SystemResource.App_DescE </th>
                                    <th style="width: 20%"> @SystemResource.app_prc</th>
                                    <th style="width: 20%"> @SystemResource.App_Tax</th>
                                    <th style="width: 20%"> @SystemResource.PurchaseAccount</th>
                                    <th style="width: 20%"> @SystemResource.ProcessesAccount</th>
                                </tr>
                            </thead>
                            <tbody id="div_Data"></tbody>

                        </table>
                        <div class="d-flex justify-content-start mr-1">
                            <span id="btnAddDetails" class="mb-3 display_none"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Script{
    <script>
        $(document).ready(function () {
            // Initialize select2
            $(".ddlAcc").select2();
            $(".ddlAccop").select2();

            // Read selected option
            $('#but_read').click(function () {
                var username = $('.ddlAcc option:selected').text();
                var userid = $('.ddlAcc').val();

                var username = $('.ddlAccop option:selected').text();
                var userid = $('.ddlAccop').val();

                $('#result').html("id : " + userid + ", name : " + username);
            });
        });
    </script>
    <script src="~/ClientApp/GeneralDefinition/GenDefAdd.js"></script>
}