
@using Inv.WebUI.Resources
@{
	Layout = "~/Views/Shared/Layout.cshtml";
}

<label for="rpTitle" style="display:none" id="rpTitle">@*@SystemResource.Rep_PayRecieptList*@</label>

<div class="row gy-3" id="content_report">
	<!-- Filter Container -->
	<div id="div_dis" class="col-12">
		<div class="card bg-light-blue" id="informtionReserved">
			<div class="card-body" id="id_div_Add">
				<div class="row">
					<div class="col-12 col-md-3">
						<div class="form-group row">
							<label for="txtFromDate" class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
							<div class="col-9 col-md-8">
								<input type="date" class="form-control" name="txtFromDate" id="txtFromDate">
							</div>
						</div>
					</div>
					<div class="col-12 col-md-3">
						<div class="form-group row">
							<label for="txtToDate" class="col-3 col-md-4 align-self-center p-md-0"> @SystemResource.App_ToDate</label>
							<div class="col-9 col-md-8">
								<input type="date" class="form-control" name="txtToDate" id="txtToDate">
							</div>
						</div>
					</div>
					<div class="col-12 col-md-3">
						<div class="form-group row">
							<label class="col-3 col-md-4 align-self-center p-md-0 fs-7">@SystemResource.Branch</label>
							<div class="col-9 col-md-8 ">
								<select id="drpBranch" name="" class="form-control">
									<option value="All">@SystemResource.App_All</option>
								</select>
							</div>
						</div>
					</div>
					<div class="col-12 col-md-3">
						<div class="form-group row">
							<label class="col-3 col-md-4 align-self-center p-md-0 fs-7">@SystemResource.User</label>
							<div class="col-9 col-md-8 ">
								<select id="drpUser" name="" class="form-control">
									<option value="All">@SystemResource.App_All</option>
								</select>
							</div>
						</div>
					</div>

				</div>
				<div class="row">
					
					<div class="col-12 col-md-3">
						<div class="form-group row">
							<label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.Job</label>
							<div class="col-9 col-md-8 ">
								<select id="drpTitle" name="" class="form-control"></select>
							</div>
						</div>
					</div>
					<div class="col-12 col-md-6">
						<div class="form-group row">
							<label class="col-3 col-md-2 align-self-center p-md-0">@SystemResource.CollectedBy</label>
							<div class="form-group col-9 col-md-10">
								<div class="row">
									<div class="form-check col-4">
										<input class="form-check-input form-radio special-radio" type="radio" id="repUser" name="reptp" value="3" checked>
										<label class="form-check-label my-auto me-3" for="reptp1">@SystemResource.User</label>
									</div>
									<div class="form-check  col-4">
										<input class="form-check-input form-radio special-radio" type="radio" id="repTitle" name="reptp" value="2">
										<label class="form-check-label my-auto me-3" for="reptp2">الحركة</label>
									</div> 
								</div>

							</div>
						</div>
					</div>




					
				</div> 
					
				</div>
			</div>
		</div>
	</div>
</div>

@section Script{
	<script src="~/ClientApp/Tools/USERS/UserActLogSum.js"></script>
}




