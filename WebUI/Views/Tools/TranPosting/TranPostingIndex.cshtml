@using Inv.WebUI.Resources
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row gy-3">
    <!-- Filter Container -->
    <div class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label class="col-3 col-md-2 align-self-center p-md-0">@SystemResource.App_BranchName</label>
                                    <div class="col-9 col-md-10 ">
                                        <select id="ddlBranch" class="form-control">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
                            <div class="col-9 col-md-8">
                                <input id="txtFromDate" name="" type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.App_ToDate</label>
                            <div class="col-9 col-md-8">
                                <input id="txtToDate" name="" type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.fromnum</label>
                            <div class="col-9 col-md-8 ">
                                <input id="txtFromNumber" name="" type="number" class="form-control">

                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3">
                        <div class="form-group row">
                            <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.tonum</label>
                            <div class="col-9 col-md-8 ">
                                <input id="txtToNumber" name="" type="number" class="form-control ">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-9 offset-md-1 mt-3">
                        <div class="d-flex">
                            <button id="btnLoad" type="button" class="btn  btn-main h-100 me-3">
                                @SystemResource.Download_move
                            </button>
                            <button id="btnShowVouchers" disabled="disabled" type="button" class=" btn btn-main h-100 me-3">
                                توليد وعرض القيد
                            </button>
                            <button id="btnCreateVoucher" type="button" class="btn btn-green align-self-end m-auto  h-100  me-3">
                                انشاء القيد فى الحسابات
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Container -->
    <div class="col-12">
        <div class="row">
            @* Switch Button Div *@
            <div class="col-lg-12 mb-n3">
                <div class=" d-flex justify-content-start">
                    <div class="switch-div" id="btndiv_3">
                        <a class="btn btn-main ms-3" id="btndiv_33" href="#"> @SystemResource.App_TrType </a>
                    </div>
                    <div class="switch-div" id="btndiv_1">
                        <a class="btn btn-main" id="btndiv_11" href="#"> @SystemResource.Movments </a>
                    </div>
                    <div class="switch-div" id="btndiv_2">
                        <a class="btn btn-main" id="btndiv_22" href="#"> @SystemResource.View_restrictions </a>
                    </div>
                </div>
            </div>

            <div id="div_1" class="col-12 display_none">
                <div class="card bg-light-blue px-4 mb-4">
                    <div class="row py-3">
                        <div class="col-12 my-3">
                            <div class="d-flex justify-content-center">
                                <button id="btnSelectAll" type="button" class="btn  btn-gray h-100 me-3">
                                    اختيار الجميع
                                </button>
                                <button id="btnReverseSelection" type="button" class=" btn btn-gray h-100 me-3 ">
                                    @SystemResource.Reverse_selection
                                </button>
                                <button id="btnUnSelectAll" type="button" class="btn btn-gray h-100 me-3">
                                    @SystemResource.Not_choosing_everyone
                                </button>
                            </div>
                        </div>
                        <div id="TransactionsGrid" class="col-12"> </div>
                    </div>

                </div>
            </div>
            <div id="div_2" class="col-12 display_none">
                <div class="card bg-light-blue px-4 mb-4">
                    <div class="row py-3">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-12 col-md-4">
                                    <div class="form-group row">
                                        <label class="col-3 col-md-4 align-self-center p-md-0">تاريخ القيد</label>
                                        <div class="col-9 col-md-8">
                                            <input id="txtVoucherDate" name="" type="date" class="form-control">
                                            @*<label id="lblVoucherNum" class="">    </label>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-12 col-md-8">
                                    <div class="form-group row">
                                        <label class="col-3 col-md-2 align-self-center p-md-0">@SystemResource.App_desc</label>
                                        <div class="col-9 col-md-10">
                                            <textarea id="txtDesc" type="text" class="form-control" maxlength="200"> </textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                        
                        <div id="VoucherDetailGrid" class="col-12"> </div>

                        <div class="col-12">
                            <div class="d-flex">
                                <label class="text-blue"> @SystemResource.App_total   </label>
                                <input id="txtDebit" disabled type="text" class="form-control " />
                                <input id="txtCedit" disabled type="text" class="form-control " />
                                <label id="" class="text-blue"> @SystemResource.Itm_Diff   </label>
                                <input id="txtDiff" disabled type="text" class="form-control " />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="div_3" class="col-12 display_none">
                <div class="card bg-light-blue px-4 mb-4">
                    <div class="py-3">
                        <table id="SubSystemGrid"></table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




@section Script{
    <script src="~/ClientApp/CustomEntities.js"></script>
    <script src="~/ClientApp/Tools/TranPosting/TranPosting.js"></script>
    <script>
        $(document).ready(function () {



            $('#btndiv_1').on('click', function () {
                $("#btndiv_1").addClass("btn-active");
                $("#btndiv_2").removeClass("btn-active");
                $("#btndiv_3").removeClass("btn-active");

                $("#btndiv_11").removeClass("btn-main");
                $("#btndiv_22").addClass("btn-main");
                $("#btndiv_33").addClass("btn-main");

                $("#div_1").removeClass("display_none");
                $("#div_2").addClass("display_none");
                $("#div_3").addClass("display_none");
            });

            $('#btndiv_2').on('click', function () {
                $("#btndiv_2").addClass("btn-active");
                $("#btndiv_1").removeClass("btn-active");
                $("#btndiv_3").removeClass("btn-active");

                $("#btndiv_22").removeClass("btn-main");
                $("#btndiv_11").addClass("btn-main");
                $("#btndiv_33").addClass("btn-main");

                $("#div_1").addClass("display_none");
                $("#div_3").addClass("display_none");
                $("#div_2").removeClass("display_none");
            });
            $('#btndiv_3').on('click', function () {
                $("#btndiv_3").addClass("btn-active");
                $("#btndiv_1").removeClass("btn-active");
                $("#btndiv_2").removeClass("btn-active");

                $("#btndiv_33").removeClass("btn-main");
                $("#btndiv_11").addClass("btn-main");
                $("#btndiv_22").addClass("btn-main");

                $("#div_3").removeClass("display_none");
                $("#div_1").addClass("display_none");
                $("#div_2").addClass("display_none");
            });

        });
    </script>
}
