
@using Inv.WebUI.Resources

@{
    ViewBag.Title = @SystemResource.Processes;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="row gy-3 ">
    <!-- Filter Container -->
    <div id="div_hedr" class="col-12">
        <div class="card bg-light-blue">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.process</label>
                                    <div class="col-8 ">
                                        <select id="ddlOPerationMaster" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.Process_status</label>
                                    <div class="col-8 ">
                                        <input type="text" class="form-control" disabled name="OperationStatusMaster" id="txtOPerationStatus">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.App_State</label>
                                    <div class="col-8 ">
                                        <select id="ddlStatusFilter" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.App_FromDate</label>
                                    <div class="col-8 ">
                                        <input type="date" class="form-control" name="GosiJoinDate" id="txtFromDate">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.App_ToDate</label>
                                    <div class="col-8 ">
                                        <input type="date" class="form-control" name="GosiJoinDate" id="txtToDate">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.fromSales</label>
                                    <div class="col-8 ">
                                        <select id="ddlSourceSalesman" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <div class="form-group row">
                                    <label class="col-4 align-self-center p-md-0">@SystemResource.ToSales</label>
                                    <div class="col-8 ">
                                        <select id="ddlToSalesman" name="" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
       <!-- Details Container -->
    <div class="col-12">
        <!-- Search Table -->
        <div class="display_none" id="divShow">
            <div class="card bg-light-blue">
                <div class="card-body">
                    <div class="form-group row col-lg-6 col-md-8 col-12 mb-2">
                        <label class="col-4 col-lg-2 col-md-2 align-self-center p-md-0">بحث</label>
                        <div class="col-8 col-lg-8 col-md-10">
                            <input id="txtSearch" type="text" class="form-control" placeholder=" @SystemResource.search_ins">
                        </div>
                    </div>
                    <!-- Table  -->
                    <div id="divGridDetails_View"></div>
                </div>
            </div>

        </div>
      <!-- Details  -->
        <div id="divTransferDetails" class="row display_none">
            <div class="col-12 service-content">
                <div class="serviceBox">
                    <div class="row g-0">
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="form-group row g-0">
                                <label class="col-4 align-self-center p-md-0">@SystemResource.Trns_TrNO</label>
                                <div class="col-8">
                                    <input type="text" class="  form-control " disabled id="txtTrNo" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="form-group row g-0">
                                <label class="col-4 align-self-center p-md-0">@SystemResource.App_date</label>
                                <div class="col-8">
                                    <input type="date" class="form-control" disabled name="" id="txtTransferDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="form-group row g-0">
                                <label class="col-4 align-self-center p-md-0">@SystemResource.Trns_RefNum</label>
                                <div class="col-8">
                                    <input type="text" class="  form-control " disabled id="txtRefNumber" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-2 ">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-4 align-self-center p-md-0">@SystemResource.Trns_IsTransfered</label>
                                <div class="col-2 col-md-8">
                                    <input type="checkbox" class="checkbox" id="chkApproved" >
                                </div>
                            </div>
                        </div>
                        @* Special Group *@
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-6 mt-3 mt-md-0">
                                    <div class="row special-group">
                                        <label class="col-12 text-blue fw-bold text-right">@SystemResource.Trns_TransFrom</label>
                                        <div class="col-12 col-lg-6">
                                            <div class="form-group row g-0">
                                                <label class="col-3 col-xl-2 align-self-center p-md-0">@SystemResource.fromSales</label>
                                                <div class="col-9 col-xl-10">
                                                    <select id='ddlSourceSalesmanAdd' class="form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6 mt-3 mt-md-0 ">
                                    <div class="row special-group">
                                        <label class="col-12 text-blue fw-bold text-right">@SystemResource.Trns_TransTo</label>
                                        <div class="col-12 col-lg-6">
                                            <div class="form-group row g-0">
                                                <label class="col-3 col-xl-2 align-self-center p-md-0">@SystemResource.ToSales</label>
                                                <div class="col-9 col-xl-10">
                                                    <select id='ddlToSalesmanAdd' class="form-control"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1 align-self-center p-md-0">@SystemResource.Trns_ApprovedBy</label>
                                <div class="col-9 col-md-11">
                                    <input id="txtApprovedBy" name="" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group row g-0">
                                <label class="col-3 col-md-1 align-self-center p-md-0">@SystemResource.App_Notes</label>
                                <div class="col-9 col-md-11">
                                    <textarea id="txtRemarks" name="" type="text" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <!-- Inside Table  -->
                        <div class="inside-table my-4">
                            <div class="table-responsive">
                                <table class="table table-borderless ">
                                    <thead id="div_label">
                                        <tr>
                                            <th style="width: 2%"></th>
                                            <th style="width: 10%">@SystemResource.Itm_ItemCode</th>
                                            <th style="width: 40%">@SystemResource.App_Item</th>
                                            <th style="width: 40%">@SystemResource.App_soldQty</th>
                                        </tr>
                                    </thead>
                                    <tbody id="div_Data"></tbody>

                                </table>
                                <span id="btnAddDetails" class="d-flex mb-3"><i class="fas fa-plus-circle fs-2 btn-plus"></i></span>
                            </div>
                        </div>
                        <!-- Editors Details -->
                        <div class="insettext row editor-details mt-2">
                            <div class="col-12 col-md-6">

                                <div class="form-group row g-0">
                                    <label class="col-2 align-self-center p-md-0"> @SystemResource.App_Seller</label>
                                    <div class="col-5 editor-input">
                                        <input id="txtCreatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                    </div>
                                    <div class="col-5 editor-input">
                                        <input id="txtCreatedAt" name="CreatedAt" type="text" disabled class="p-0">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row g-0">
                                    <label class="col-2 align-self-center p-md-0"> @SystemResource.App_Update</label>
                                    <div class="col-5 editor-input">
                                        <input id="txtUpdatedBy" name="CreatedBy" type="text" disabled class="p-0">
                                    </div>
                                    <div class="col-5 editor-input">

                                        <input id="txtUpdatedAt" name="UpdatedAt" type="text" disabled class="p-0">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Script{
    <script src="~/ClientApp/Processes/SalesTrans.js"></script>
}